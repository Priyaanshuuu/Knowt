generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  password  String
  plan      String    @default("FREE")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  summaries Summary[]
  uploads   Upload[]
}

model Share {
  id        String   @id @default(cuid())
  slug      String   @unique
  summaryId String   @unique
  createdAt DateTime @default(now())
  summary   Summary  @relation(fields: [summaryId], references: [id])
}

model Summary {
  id          String        @unique @default(cuid())
  userId      String
  inputType   String
  originalUrl String?
  summaryText String?
  outputLang  String?
  audioUrl    String?
  pdfUrl      String?
  createdAt   DateTime      @default(now())
  uploadId    String?
  language    String
  QnA         QnA[]
  share       Share?
  upload      Upload?       @relation(fields: [uploadId], references: [id])
  user        User          @relation(fields: [userId], references: [id])
  translation Translation[]
}

model Translation {
  id        String   @id @default(cuid())
  summaryId String
  language  String
  content   String
  createdAt DateTime @default(now())
  summary   Summary  @relation(fields: [summaryId], references: [id], onDelete: Cascade)

  @@unique([summaryId, language])
  @@index([summaryId])
}

model Upload {
  id        String     @id @default(cuid())
  userId    String
  type      UploadType
  source    String
  createdAt DateTime   @default(now())
  error     String?    @default("")
  status    String     @default("PENDING")
  summary   Summary[]
  user      User       @relation(fields: [userId], references: [id])
  fileName  String?
}

model QnA {
  id        Int      @id @default(autoincrement())
  summaryId String
  question  String
  answer    String
  createdAt DateTime @default(now())
  summary   Summary  @relation(fields: [summaryId], references: [id])
}

enum UploadType {
  PDF
  VIDEO
  AUDIO
  LINK
}

enum UploadStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}
